<div class="w-full flex flex-col rounded-lg m-2 p-3">
  <%= form_with(model: waitlist_user, class: "w-full") do |form| %>
    <% if waitlist_user.errors.any? %>
      <div id="error_explanation" class="flex flex-col bg-red-200 text-white font-medium rounded-lg mb-3 border-red-400 border-4 before:rounded-md before:absolute before:inset-0 before:border-2 before:border-black relative">
        <div class="text-center items-center border-b-2 px-3 py-2 border-b-black">
          <h2 class="font-bold text-gray-800"><%= t('.errors.header') %></h2>
        </div>

        <ul class="px-3 py-2 text-red-700">
          <% waitlist_user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex flex-col space-y-1 md:space-y-2 items-center">
      <div class="border-2 border-black outline-2 outline-white w-full p-4 rounded-lg">
        <div class="w-full">
          <%= form.label :email_address, t('.email_address'), class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= form.text_field :email_address,
                              placeholder: "fantastic-person+kwux@gmail.com",
                              class: "appearance-none block w-full bg-blue-500 text-white placeholder:text-white border-2 border-black rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:text-black" %>
        </div>

        <div class="w-full">
          <%= form.label :business_type, t('.business_type'), class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= form.select :business_type, Waitlist::User.business_types.keys,
                          { prompt: "Kwux is perfect for my\u2026" },
                          class: "block appearance-none w-full bg-blue-500 border-2 border-black text-white mb-3 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500 focus:text-black"
          %>
        </div>
      </div>

      <div class="flex justify-end w-full md:w-auto md:pt-2">
        <%= form.submit t('.submit'),
                        class: "w-full rounded-lg py-2 px-5 bg-green-200 text-black inline-block font-medium border-2 border-black cursor-pointer hover:shadow-solid-md hover:translate-x-[-0.25em] hover:translate-y-[-0.25em]" %>
      </div>
    </div>
  <% end %>
</div>