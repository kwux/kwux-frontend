<%= turbo_frame_tag Waitlist::User.new, class: 'w-full md:w-1/2 flex flex-col justify-center items-center' do %>
  <% if waitlist_user and waitlist_user.persisted? %>
    <div class="flex flex-col justify-center items-center space-y-6 text-center">
      <h2 class="font-semibold text-2xl">
        <%= t('.success.header') %>
      </h2>
      <h3 class="w-3/4">
        <%= t('.success.subheader') %>
      </h3>
      <div class="w-3/4">
        <p>
          Send an email to <span class="whitespace-pre bg-blue-300 rounded-md shadow-solid-sm shadow-black px-1 md:px-3 py-1 font-semibold uppercase text-xs leading-tight">mo [at] kwux.com</span> if you want
          to be part of our pre-launch user group!
        </p>
      </div>
    </div>
  <% else %>
    <h2 class="font-semibold text-2xl mx-auto">Sign up for the Waitlist!</h2>
    <%= render partial: 'waitlist/users/form', locals: { waitlist_user: @waitlist_user } %>
  <% end %>
<% end %>